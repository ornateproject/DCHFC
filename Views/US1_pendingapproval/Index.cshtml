@model ssc.Models.DeptRegistration

<form asp-action="Approve" asp-controller="US1_pendingapproval" method="post">
    <!-- Form fields here -->
</form>

<div class="br-pageheader pd-y-15 pd-l-20">
        <nav class="breadcrumb pd-0 mg-0 tx-12">
          <a class="breadcrumb-item" href="US1.html">Dashboard</a>
          <span class="breadcrumb-item active">Pending Approval View</span>
        </nav>
      </div><!-- br-pageheader -->
      <div class="pd-x-20 pd-sm-x-30 pd-t-20 pd-sm-t-30 text-center">
        <h4 class="tx-gray-800 mg-b-5">Pending Approval View</h4>
        
      </div>

    <div class="br-pagebody">
        <div class="br-section-wrapper">
          
            <div class="form-layout form-layout-1">

                <div class="row mg-b-25">
                    <div class="col-lg-4">
                        <div class="form-group">

                            <label class="form-control-label tx-gray-700">Department: <span class="tx-danger">  </span></label>
                            @Model.Department
                        </div>
                    </div><!-- col-4 -->
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="form-control-label tx-gray-700">Name: <span class="tx-danger">  </span></label>
                            @Model.Name

                        </div>
                    </div><!-- col-4 -->
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="form-control-label tx-gray-700">Mobile: <span class="tx-danger">  </span></label>
                            @Model.Mobile_no

                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="form-control-label tx-gray-700">Email: <span class="tx-danger">  </span></label>
                            @Model.Email

                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="form-control-label tx-gray-700">Nodal officer Doc upload: <span class="tx-danger">  </span></label>
                            <a target="_blank" href="~/pdf/@Model.Doc_path"><img class="Pdficon1" src="~/img/PDF-icon.png" width="10%"></a>

                        </div>
                    </div>


                    <!-- col-4 -->
                    
                    <div class="row mg-b-25">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label tx-gray-700">Remark: <span class="tx-danger"></span></label>
                                <textarea class="form-control" style="width:100%" id="remark" name="remark" rows="4" cols="125"></textarea>

                            </div>
                        </div>


                    </div>
                </div><!-- row -->

                <div class="form-layout-footer text-center" "=" ">
                @if (Model.Status != "1" && Model.Status != "2")
                {
                        <a href="@Url.Action("Approve", "US1_pendingapproval", new { id = Model.ID,Remark=Model.Remark })"><button class="btn btn-success" style="cursor:pointer">Approve</button></a>



                        <a href="@Url.Action("Reject", "US1_pendingapproval", new { id = Model.ID })"><button class="btn btn-red" style="cursor:pointer">Reject</button></a>
                }
                    <a href="@Url.Action("Index", "US")"><button class="btn btn-secondary" style="cursor:pointer">Cancel</button></a>
                </div><!-- form-layout-footer -->
                
            </div><!-- form-layout -->

        </div><!-- br-section-wrapper -->
    </div><!-- br-pagebody -->


     
  
