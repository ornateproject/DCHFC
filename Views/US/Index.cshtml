@model List<DeptRegistration>;


<div class="br-pageheader pd-y-15 pd-l-20">
    <nav class="breadcrumb pd-0 mg-0 tx-12">
        <a class="breadcrumb-item" href="US1.html">US</a>
        <span class="breadcrumb-item active">Registration</span>
    </nav>
</div><!-- br-pageheader -->
<div class="pd-x-20 pd-sm-x-30 pd-t-20 pd-sm-t-30 text-center">
    <h4 class="tx-gray-800 mg-b-5">Registration</h4>

</div>

<div class="br-pagebody">
    <div class="br-section-wrapper">
        <!-- d-flex -->
        <div class="table-wrapper rounded table-responsive">
            <table id="datatable1" class="table display responsive nowrap">
                <thead>
                    <tr>
                        <th>Sr No.</th>
                        <th>Department</th>
                        <th>Name</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>Nodal officer Doc upload</th>
                        <th>Status</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody >
                    @{
                        int i = 0;
                        foreach(var item in Model)
                        {
                            i++;

                    <tr>
                        <th scope="row">@i</th>
                          <td>@item.Department</td>
                        <td>@item.Name</td>
                        <td>@item.Mobile_no</td>
                        <td>@item.Email</td>
                        <td><a target="_blank" href="~/pdf/@item.Doc_path"><img class="Pdficon1" src="~/img/PDF-icon.png" width="10%"></a>@item.Upload_doc</td>                      
                      @*<td><a href="#"><img class="Pdficon1" src="~/img/PDF-icon.png" width="10%"></a></td>*@
                        <td><strong>
                                        
                                @if (@item.Status == "1")
                                        {
                                            <span class="text" style="color:green">Approve </span>
                                        }
                                        else if (@item.Status == "2")
                                        {
                                            <span class="text"  style="color:blue">Reject </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Pending </span>
                                        }

                        </strong></td>
                        <td>
                            <div class="modal-bootstrap modal-login-form">
                                      
                                            <a class="zoomInDown mg-t btn btn-red" href="/US1_pendingapproval/index/@item.ID">View Details</a>
                                          
                                       
                            </div>
                            <!-- BASIC MODAL -->

                        </td>

                    </tr>
                    
                    }
                    }


                </tbody>

            </table>
        </div><!-- bd -->




    </div><!-- br-section-wrapper -->
</div><!-- br-pagebody -->
<!-- ########## END: MAIN PANEL ########## -->


