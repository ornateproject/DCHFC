<div class="br-pageheader pd-y-15 pd-l-20">
    <nav class="breadcrumb pd-0 mg-0 tx-12">
        <a class="breadcrumb-item">Candidate</a>
        <span class="breadcrumb-item active">Preview</span>
    </nav>
</div><!-- br-pageheader -->
<div class="pd-x-20 pd-sm-x-30 pd-t-20 pd-sm-t-30 text-center">
    <h4 class="tx-gray-800 mg-b-5">Preview</h4>

</div>
<form asp-action="candidate_preview" asp-controller="Candidatedata" enctype="multipart/form-data" method="post" asp-antiforgery="false" >
 
    <div class="br-pagebody">
    <div class="br-section-wrapper">
  
        <!-- d-flex -->
        <div class="table-wrapper rounded table-responsive">
            
            <table id="datatable1" class="table display responsive nowrap">
                <thead>
                    <tr>
                        <th>Sr No.</th>
                        <th>Post ID</th>
                        <th>Post Name</th>
                    </tr>
                </thead>
                <tbody >
                    @{
                       
                        
                        for(var i=0;i< Model.getposts.Count;i++ )
                        {                         

                            <tr>
                                <th scope="row">@i</th>                                
                                <td><label >@Model.getposts[i].post_id</label> <input type="hidden" asp-for="@Model.getposts[i].post_id" class="form-control"> </td>
                                <td><label >@Model.getposts[i].post_name</label> <input type="hidden" asp-for="@Model.getposts[i].post_name" class="form-control"/> </td>

                             </tr>
                              

                        }
                        }

                </tbody>

            </table>
             <span class="col-md-12">
              <p style="color:black;font-weight:200">  <b> View Document</b></p>
               <input type="hidden" asp-for="~/document/FinalDocument/@Model.candetails.regNo" class="form-control"/>
               <a target="_blank"  href="~/document/FinalDocument/@Model.candetails.regNo" ><img class="Pdficon1" src="~/img/PDF-icon.png" width="75px"></a>
            </span>
               <div class="col-md-12 text-center">
                    <a href="/Candidatedata/candidate" type="button"  style='cursor:pointer' class="btn btn-primary">Back</a>
                <button type="submit" style='cursor:pointer' hidden class="btn btn-primary">Submit</button>
            </div>
          

        </div><!-- bd -->


        
    </div><!-- br-section-wrapper -->
    
</div><!-- br-pagebody -->
</form>
