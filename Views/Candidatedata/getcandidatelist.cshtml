
@model List<getpost>;


<div class="br-pageheader pd-y-15 pd-l-20">
    <nav class="breadcrumb pd-0 mg-0 tx-12">
        <a class="breadcrumb-item" href="US1.html">US</a>
        <span class="breadcrumb-item active">Candidate List</span>
    </nav>
</div><!-- br-pageheader -->
<div class="pd-x-20 pd-sm-x-30 pd-t-20 pd-sm-t-30 text-center">
    <h4 class="tx-gray-800 mg-b-5">Candidate List</h4>

</div>

<div class="br-pagebody">
    <div class="br-section-wrapper">
        <!-- d-flex -->
        <div class="table-wrapper rounded table-responsive">
            <table id="datatable1" class="table display responsive nowrap">
                <thead>
                    <tr>
                        <th>Sr No.</th>
                        <th>Post Code</th>
                          <th>Post_name</th>
                        <th>Registration Number</th>
                        <th>Candidate Name</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            i++;


                    <tr>
                        <th scope="row">@i</th>
                        <th>@item.post_id</th>
                        <th>@item.post_name</th>
                        <th>@item.Reg_no</th>
                        <th>@item.Name </th>
                      
                        <td>
                            <div class="modal-bootstrap modal-login-form">

                              <a class="zoomInDown mg-t btn btn-red" asp-action="usviewback" asp-controller="Login" asp-route-id="@item.id">View Details</a>

                            </div>
                            <!-- BASIC MODAL -->

                        </td>

                    </tr>

                  }
                  }



                </tbody>

            </table>
        </div><!-- bd -->




    </div><!-- br-section-wrapper -->
</div><!-- br-pagebody -->
<!-- ########## END: MAIN PANEL ########## -->


