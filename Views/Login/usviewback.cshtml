@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@model ssc.Models.getpost


 @{
        var usertype = @Accessor.HttpContext.Session.GetString("userType").ToString();
    }
<div class="br-pageheader pd-y-15 pd-l-20">
    <nav class="breadcrumb pd-0 mg-0 tx-12">
        <a class="breadcrumb-item" href="US1.html">Dashboard</a>
        <span class="breadcrumb-item active">Candidate Data</span>
    </nav>
</div><!-- br-pageheader -->
<div class="pd-x-20 pd-sm-x-30 pd-t-20 pd-sm-t-30 text-center">
    <h4 class="tx-gray-800 mg-b-5">Candidate Data</h4>

</div>

<div class="br-pagebody">
    <div class="br-section-wrapper">

        <div class="form-layout form-layout-1">

            <div class="row mg-b-25">
               
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label tx-gray-700">Registration number: <span class="tx-danger">*</span></label>
                        @Model.Reg_no

                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label tx-gray-700">Name: <span class="tx-danger">*</span></label>
                        @Model.Name

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label tx-gray-700">DOB: <span class="tx-danger">*</span></label>
                        @Model.DOB

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label tx-gray-700">Email: <span class="tx-danger">*</span></label>
                         @Model.Email

                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label tx-gray-700">Mobile No: <span class="tx-danger">*</span></label>
                         @Model.Mobile_no

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label tx-gray-700">Adress: <span class="tx-danger">*</span></label>
                         @Model.Address

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label tx-gray-700">Document: <span class="tx-danger">*</span></label>
                       <a target="_blank" href="~/document/@Model.Doc_path"><img class="Pdficon1" src="~/img/PDF-icon.png" width="10%"></a>

                    </div>
                </div>
                <!-- col-4 -->

              
            </div><!-- row -->
            <div class="row mg-b-25">
                <div class="col-lg-12">
            <div class="modal-bootstrap modal-login-form">
                        @if (@usertype=="2")
                        {
                            <a href="@Url.Action("usview", "Candidatedata")"><button class="btn btn-red" style="cursor:pointer" " text-center">Back</button></a>

                        }
                        else
                        {  @if (@Model.status != "1" && @Model.status != "2")
                            {
                             <a href="@Url.Action("Reject", "Login", new{ id = @Model.id })"><button class="btn btn-red" style="cursor:pointer">Reject</button></a>                
                             <a href="@Url.Action("Approve", "Login", new{ id = @Model.id })"><button class="btn btn-success" style="cursor:pointer">Approve</button></a>
                               <a href="@Url.Action("usview", "Candidatedata")"><button class="btn btn-secondary" style="cursor:pointer">Cancel</button></a>
                            }
                            else
                            {
                               <a href="@Url.Action("usview", "Candidatedata")"><button class="btn btn-secondary" style="cursor:pointer">Cancel</button></a>

                              <button class="btn btn-red" hidden style="cursor:pointer">Reject</button>             
                              <button class="btn btn-success" hidden style="cursor:pointer">Approve</button>   
                            
                            }
                        }
                       
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
        </div>
        </div>



    </div><!-- br-section-wrapper -->
</div><!-- br-pagebody -->
