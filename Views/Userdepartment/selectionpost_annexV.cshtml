<script>
    function findTotal() {
        var arr = document.getElementsByClassName('num1');
        var tot = 0;
        for (var i = 0; i < arr.length; i++) {
            if (parseFloat(arr[i].value))
                tot += parseFloat(arr[i].value);
        }
        document.getElementById('amounttotal').value = tot;

    }
    function totalFind() {
        var arr = document.getElementsByClassName('num');
        var tot = 0;
        for (var i = 0; i < arr.length; i++) {
            if (parseFloat(arr[i].value))
                tot += parseFloat(arr[i].value);
        }
        document.getElementById('amount').value = tot;

    }
</script>
